<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="Journaleintrag">
		<field name="id" type="hidden" default="0" />
		<field name="objektid" type="hidden" default="0" />
		<field name="klasseid" type="hidden" default="0"/>
		<field name="datum" type="calendar" label="Datum: " description="Datum des Eintrags" format="%Y-%m-%d" size="8" required="true" />
		<field name="titel" type="text" class="inputbox" label="Titel: " description="Titel in Übersicht" size="30" maxlength="40" required="true"/>
		<field name="beschreibung" type="editor" class="editor" label="Text: " description="Journal-Text mit maximaler Länger von 65000 Zeichen" 
			height="400px" filter="safehtml" />
	</fieldset>
</form>