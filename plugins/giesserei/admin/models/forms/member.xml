	<fieldset name="telefonie">
		<field name="telefon" type="text" class="inputbox" label="Telefon: " description="Festnetz-Telefonnummer" size="30" />
		<field name="telefon_frei" type="checkbox" class="inputbox" label=" Telefonnummer sichtbar" description="Sichtbarkeit EIN/AUS" value="1" />
